<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pin_dialog_pin_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"
    	android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/knc_header_text"
        android:text="Enter Your Current Pin" />
    
    <EditText
        android:id="@+id/pin_dialog_pin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
    	android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/pin_dialog_new_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:text="Enter Your New Pin"
        android:textColor="@color/knc_header_text" />

    <EditText
        android:id="@+id/pin_dialog_new_pin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10" />
    
        <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="12dp"
	    	android:layout_marginRight="@dimen/activity_horizontal_margin"
	    	android:layout_marginTop="4dp"
	    	android:orientation="horizontal" 
    	>
	    	<CheckBox
	        	android:id="@+id/pin_dialog_enable"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	     	/> 
	     	
	    	<TextView
	        	android:id="@+id/pin_dialog_pin_enabled_label"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:ems="10"
	        	android:singleLine="true"
	        	android:textColor="@color/knc_header_text"
	        	android:text="Enable App Pin" />
    </LinearLayout>

</LinearLayout>
