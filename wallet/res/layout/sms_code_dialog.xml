<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="8dp"
	android:orientation="vertical" >

    <EditText
        android:id="@+id/sms_code_dialog_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_entry_padding_horizontal"
        android:layout_marginRight="@dimen/list_entry_padding_horizontal"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/sms_code_input_hint"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="@dimen/font_size_normal" >
        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/sms_code_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_message"
        android:layout_marginLeft="@dimen/list_entry_padding_horizontal"
        android:layout_marginRight="@dimen/list_entry_padding_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font_size_normal"
        />
	
</LinearLayout>